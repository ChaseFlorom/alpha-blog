<h1 align = "center"><%= "Category " + @category.name %></h1>
<div class = "col-md-6 offset-md-5" align = "center">
    <div align = "center">
        <% if logged_in? and current_user.admin? %>
            <div class = "row">
                    <span class = "badge badge-secondary"><%= link_to "Edit Category Name", edit_category_path(@category)%></span>
            </div>
        <%end%>
         <%= will_paginate @category_articles, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
    </div>
</div>
<%= render 'articles/article', obj: @category_articles %>
<div class = "col-md-6 offset-md-5" align = "center">
    <div align = "center">
         <%= will_paginate @category_articles, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
    </div>
</div>