<h1 align = "Center">Showing All Categories</h1>
<div class = "col-md-6 offset-md-5" align = "center">
    <div align = "center">
         <%= will_paginate @clients, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
    </div>
</div>
<% @categories.each do |category| %>
    <ul class = "listing">
        <div class = "row">
            <div class = "card col-md-4 offset-md-4" align = "center">
                <div class = "article-title">
                    <%= link_to "#{category.name}", category_path(category) %>
                </div>
            </div>    
        </div>

    </ul>
<%end%>
<div class = "col-md-6 offset-md-5" align = "center">
