<%= render 'shared/errors', obj: @article %>

<div class= "row">
    <div class= 'col-sm-12 offset-sm-1'>
       
        <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do  |f| %>
        <div class="form-group">
            <div class="control-label col-sm-2">
                <%= f.label :title %>
               
            </div>
             
    
            <div class="col-sm-10">
                
                  <%= f.text_field :title, class:"form-control", placeholder: "Title of article", autofocus: true %> 
            </div>
        </div>

  
          <div class="form-group">
            <div class="control-label col-sm-2">      
                <%= f.label :description %>
            </div>
            <div class="col-sm-10">
               <%= f.text_area :description, rows: 10, class:"form-control", placeholder: "Body of article" %>
            </div>
                
             <div class="form-group"  id="dropdown">
                    <div class="col-sm-offset-2 col-sm-10">
                         <%= f.collection_check_boxes :category_ids, Category.all, :id, :name, {:item_wrapper_class => 'checkbox_container'} do |cb| %>
                             <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
                         <%end%>
                    </div>
            </div>            
            
            <div class="form-group" id="submitbutton">
                <div class="col-sm-offset-2 col-sm-10">
                    <%= f.submit  class: "btn btn-primary btn-large" %>
                </div>
                
            </div>
                

            
            <div class="col-sm-4 offset-sm-3" align="center">
             [  <%= link_to "Cancel request and return to articles", articles_path %> ]
            </div>
            
                
            
        
        <%end%>
        
    </div>
</div>
